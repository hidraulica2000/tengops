- uri = URI(@user.avatar.gsub("_s",""))
- response = Net::HTTP.get_response(uri).code

- unless response == "404"
  = image_tag(uri, :class => "img-rounded avatar flexible")
- else
  = image_tag(@user.avatar, :class => "img-rounded avatar")
