- string = ""
- int = 0
- User.all.each do |user|
  - unless int == 0
    - string.concat(",")
  - string.concat("{username: '#{user.gamertag}', name: '#{user.full_name}', image: '#{user.avatar}'}")
  - unless int < User.all.count
    - string.concat(",")
  - int += 1
%script
  $("#multi-users").mention({
  queryBy: ['username'],
  delimiter: '@',
  users: [#{string}]
  });
%script
  $.ajax({
  url: '#{news_commentts_path(@new)}',
  success: function(html){
  $('#comment-list').html(html);
  }
  });