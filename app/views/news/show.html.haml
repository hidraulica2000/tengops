%script
  $.ajax({
  url: '#{news_commentts_path(@new)}',
  success: function(html){
  $('#comment-list').html(html).hide().fadeIn(400);
  }
  });
%script
  $.ajax({
  url: '#{friends_path}',
  success: function(html){
  $('#links').html(html).hide();
  }
  });
%script
  $('#multi-users').maxlength({max: 450});
%script
