%p{:style => "margin-bottom: 5px;"}
  %span.label.label-info
    %small= p.condition
  - if p.published?
    %span.label.label-info
      %small Publicado
  - else
    %span.label.label-important
      %small No Publicado
.btn-group
  - if p.published?
    = link_to market_product_action_path(current_user.market, p), method: :put, :remote => true, :disable_with => "--", :class => "btn btn-mini" do
      %i.icon-ban-circle
  - else
    = link_to market_product_action_path(current_user.market, p.id), method: :put, :remote => true, :disable_with => "--", :class => "btn btn-primary btn-mini" do
      %i.icon-ok
  = link_to edit_market_product_path(current_user.market.id, p.id, :game => p.game.id), :class => "btn btn-inverse btn-mini" do
    %i.icon-cog
